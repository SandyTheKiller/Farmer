<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/colorRipple"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:textColor="@color/textColor"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="#d9d8d8"
            android:text="Register"
            android:textAlignment="textStart" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="25dp"
            android:textSize="17dp"
            android:background="#d9d8d8"
            android:textColor="@color/textColor"
            android:text="Please fill your information below"
            android:textAlignment="textStart"
            android:gravity="start" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_name"
            android:hint="Full Name"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPersonName"
            android:maxLines="2"
            android:background="@color/white"
            android:textCursorDrawable="@drawable/login_et_cursor_color"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="5dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textColor"
            android:textColorHint="#a7b1b4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_mobile"
            android:hint="Mobile Number"
            android:background="@color/white"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/login_et_cursor_color"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="phone"
            android:maxLines="2"
            android:textColor="@color/textColor"
            android:textColorHint="#a7b1b4"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="25dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="5dp" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="@dimen/default_gap">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_pass1"
            android:hint="Password"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:maxLines="2"
            android:background="@color/white"
            android:textCursorDrawable="@drawable/login_et_cursor_color"
            android:textColor="@color/textColor"
            android:textColorHint="#a7b1b4"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="25dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:paddingLeft="5dp" />
        </android.support.design.widget.TextInputLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_c_pass"
            android:hint="Confirm Password"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLines="2"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@drawable/login_et_cursor_color"
            android:textColor="@color/textColor"
            android:textColorHint="#a7b1b4"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="25dp"
            android:drawablePadding="10dp"
            android:layout_marginRight="25dp"
            android:paddingLeft="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/colorWhite">
        <Spinner
            android:id="@+id/spnState"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Select State"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            app:met_floatingLabel="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/margin_20">
        <Spinner
            android:id="@+id/spnDistrict"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Select District"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/margin_20">
        <Spinner
            android:id="@+id/spnTaluka"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Select Taluka"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            app:met_floatingLabel="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/margin_20">
        <Spinner
            android:id="@+id/spnVillage"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Select Village"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            app:met_floatingLabel="normal" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reg"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="@drawable/bt_login_shape"
            android:paddingRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            android:text="Sign Up"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:text="Already Registered ? Login Now !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</ScrollView>